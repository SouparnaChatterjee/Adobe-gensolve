class Solution {
    // Function to find the leaders in the array.
  public:
    vector<int> leaders(int n, int arr[]) {
        // Code here
        int leader=arr[n-1];
        vector<int> ans;
        ans.push_back(leader);
        for(int i=n-2;i>=0;i--)
        {
            if(arr[i]>=leader)
            {
                leader=arr[i];
              ans.push_back(leader) ; 
        }
        }
        reverse(ans.begin(),ans.end());
        return ans;
    }
};
