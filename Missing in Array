class Solution {
  public:

    // Note that the size of the array is n-1
    int missingNumber(int n, vector<int>& arr) {
        int total=0,sum=0;
        for(int i=0;i<arr.size();i++)
        sum+=arr[i];
        // Your code goes here
        for(int i=1;i<=n;i++)
        total+=i;
        return total-sum;
    }
};
